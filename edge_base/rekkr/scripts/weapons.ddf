// REKKR's Dehacked->DDF parsing somehow creates a super shotgun entry
// with the shotgun sprite names. This prevents a duplicate 'shotgun' weapon

<WEAPONS>

[SHOTGUN]
AMMOTYPE = SHELLS;
AMMOPERSHOT = 2;
AUTOMATIC = TRUE;
BINDKEY = 3;
PRIORITY = 3;

STATES(UP) =
    SHTG:A:1:NORMAL:RAISE,#UP;

STATES(DOWN) =
    SHTG:A:1:NORMAL:LOWER,#DOWN;

STATES(READY) =
    SHTG:A:1:NORMAL:READY,#READY;

STATES(ATTACK) =
    SHTG:A:3:NORMAL:NOTHING,
    SHTG:B:10:BRIGHT:SHOOT,
    SHTG:C:4:NORMAL:NOTHING,
    SHTG:D:4:NORMAL:NOTHING,
    SHTG:E:10:NORMAL:PLAYSOUND(DBLOAD),
    SHTG:D:3:NORMAL:NOTHING,
    SHTG:E:10:NORMAL:NOTHING,
    SHTG:D:3:NORMAL:NOTHING,
    SHTG:E:10:NORMAL:NOTHING,
    SHTG:D:3:NORMAL:NOTHING,
    SHTG:C:3:NORMAL:NOTHING,
    SHTG:A:3:NORMAL:NOTHING,
    SHTG:A:7:NORMAL:REFIRE,#READY;

STATES(FLASH) =
    SHTF:A:4:BRIGHT:LIGHT1,
    SHTF:B:4:BRIGHT:LIGHT2,
    SHTG:F:0:NORMAL:LIGHT0,#REMOVE;

ATTACK = PLAYER_SHOTGUN2;

[SUPER_SHOTGUN]
AMMOTYPE=SHELLS;
AMMOPERSHOT=2;
AUTOMATIC=TRUE;
BINDKEY=3;
PRIORITY=4;
ATTACK=PLAYER_SHOTGUN2;
KICK=0.1;
STATES(UP)=SHT2:A:1:NORMAL:RAISE;
STATES(DOWN)=SHT2:A:1:NORMAL:LOWER;
STATES(READY)=SHT2:A:1:NORMAL:READY;
STATES(ATTACK)=SHT2:A:2:NORMAL:NOTHING,
               SHT2:A:8:NORMAL:SHOOT,
               SHT2:B:7:NORMAL:NOTHING,
               SHT2:C:7:NORMAL:NOTHING,
               SHT2:C:0:NORMAL:CHECKRELOAD;
STATES(RELOAD)=SHT2:D:7:NORMAL:PLAYSOUND(DBOPN),
               SHT2:E:7:NORMAL:NOTHING,
               SHT2:F:7:NORMAL:PLAYSOUND(DBLOAD),
               SHT2:G:6:NORMAL:NOTHING,
               SHT2:H:0:NORMAL:PLAYSOUND(DBCLS),
               SHT2:H:6:NORMAL:REFIRE,
               SHT2:A:5:NORMAL:NOTHING;
STATES(FLASH)=SHT2:I:0:BRIGHT:TRANS_SET(50%),
              SHT2:I:4:BRIGHT:LIGHT1,
              SHT2:J:4:BRIGHT:LIGHT2,
              SHT2:J:0:NORMAL:LIGHT0,
              #REMOVE;