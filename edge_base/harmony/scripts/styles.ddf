<STYLES>

#VERSION 1.00

[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="EDGE1"; // "New Game", "options", "load", "save", "quit"
TEXT.SCALE=1.2;
TEXT.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";


[CHOOSE_SKILL] //New game/Choose Skill
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //"New Game"
HEADER.SCALE=1.2;
TITLE.FONT="EDGE1"; // "Choose Skill"
TITLE.SCALE=1.2;
TEXT.FONT="EDGE1"; //"I'm too young to die" etc.;
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";


[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //"Which Episode?"
HEADER.SCALE=1.2;
TEXT.FONT="EDGE1"; //"Knee deep in the dead" etc.
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";

[OPTIONS]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=85%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.SCALE=1.2;
TEXT.FONT="EDGE3"; //items and header
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_HARMONY_BLUE";
ALT.FONT="EDGE3"; //values
ALT.SCALE=1.1;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="EDGE3"; //Selected text
TITLE.SCALE=1.12;
TITLE.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_HARMONY_PURPLE";
HELP.SCALE=1.1;

//Now both Load and Save menu use the same style entry
//This one behaves different to other styles because as it's
//considered a System menu, I experimented with new ways
//of doing things.
[LOAD_SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=70%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING=4;
HEADER.FONT="EDGE3"; //"Load game"
HEADER.SCALE=2.0;
HEADER.COLOURMAP="TEXT_HARMONY_BLUE";
// save name & slot block
TEXT.FONT="EDGE3"; 
TEXT.COLOURMAP="TEXT_HARMONY_BLUE";
TEXT.SCALE=1.9;
TEXT.X_OFFSET=20;
TEXT.Y_OFFSET=40;
// save info text block
HELP.FONT="EDGE3"; 
HELP.COLOURMAP="TEXT_HARMONY_PURPLE";
HELP.SCALE=1.1;
HELP.X_OFFSET=210;
HELP.Y_OFFSET=40;
// next page text block
TITLE.FONT="EDGE3"; 
TITLE.COLOURMAP="TEXT_HARMONY_PURPLE";
TITLE.SCALE=1.5;
TITLE.X_OFFSET=20;
TITLE.Y_OFFSET=160;
ALT.FONT="EDGE3";  // when we edit the save name
ALT.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";
ALT.SCALE=1.85;
// selected slot text
SELECTED.FONT="EDGE3";
SELECTED.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";
SELECTED.SCALE=1.92;

[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=85%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //items
HEADER.COLOURMAP="TEXT_HARMONY_BLUE";
HEADER.SCALE=1.25;
TEXT.FONT="EDGE3"; //items
TEXT.COLOURMAP="TEXT_HARMONY_BLUE";
TEXT.SCALE=1.1;
ALT.FONT="EDGE3"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="EDGE3"; //Selected text
TITLE.COLOURMAP="TEXT_HARMONY_LIGHT_BLUE";
TITLE.SCALE=1.12;
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_HARMONY_PURPLE"; //"TEXT_GREEN";
HELP.SCALE=1.1;

[STATS]
TEXT.FONT="EDGE1";
// don't apply any colourmap
ALT.FONT="EDGE1";  // par times
// Fixme: sounds !!

 
 
 
 
